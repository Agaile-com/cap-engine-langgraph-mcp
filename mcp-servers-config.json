{
    "mcpServers": {
        "sqlite": {
            "command": "uvx",
            "description": "Database operations with SQLite",
            "args": [
                "mcp-server-sqlite",
                "--db-path",
                "test.db"
            ]
        },
        "github": {
            "command": "npx",
            "description": "GitHub operations for code projects",
            "args": [
                "-y",
                "@modelcontextprotocol/server-github"
            ]
        },
        "filesystem": {
            "command": "npx",
            "description": "Filesystem operations on your files",
            "args": [
                "-y",
                "@modelcontextprotocol/server-filesystem",
                "/Users/user/Desktop",
                "/Users/user/fun/langgraph-mcp"
            ]
        }
    }
}